#include<stdio.h>
#include<malloc.h>

typedef struct node
{
	int data;
	struct node *next;
}node;

node *getNode(){
    node *temp;
    temp=(node*)malloc(sizeof(node));
    printf("enter element");
    scanf("%d",&temp->data);
    temp->next=NULL;
    return temp;
}
node *create(){
    node *temp,*ptr,*head=NULL;
    int n,i;
    printf("\nenter no.of nodes");
    scanf("%d",&n);
    for(i=0;i<n;i++){
        temp=getNode();
        if(head==NULL){
            head=ptr=temp;
        }
        else{
            ptr->next=temp;
            ptr=temp;
        }
    }
    return head;
}
void display(node *head)
{
    node *ptr;
    for(ptr=head;ptr!=NULL;ptr=ptr->next){
        printf("%d->",ptr->data);
    }
    printf("NULL\n");
}

node *merge(node *l1 , node *l2)
{
	node *h=NULL,*t=NULL;
	
	if(l1 == NULL)
		return l2;
	if(l2 == NULL)
		return l1;
	
	if(l1->data <= l2->data)
	{
		h=t=l1;
		l1=l1->next;
	}
	else
	{
		    h=t=l2;
		    l2=l2->next;
	}
	while(l1!=NULL && l2!=NULL)
	{
		if(l1->data <= l2->data)
		{
			t->next=l1;
			l1=l1->next;
			t=t->next;
		}
		else
		{
		    t->next=l2;
			l2=l2->next;
			t=t->next;	
		}
	}
	
	if(l1!=NULL)
	{
		t->next=l1;
	}
	
	else
	{
		t->next=l2;
	}
	
	return h;	
}

int main()
{
	node *l1,*l2,*f;
	l1=create();
	display(l1);
	l2=create();
	display(l2);
	f=merge(l1,l2);
	display(f);
	return 0;
}
